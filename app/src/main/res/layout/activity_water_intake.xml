        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="1"
            android:textColor="#CBCCAED1"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
